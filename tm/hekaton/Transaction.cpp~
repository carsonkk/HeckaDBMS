
#include "Transaction.h"

Transaction::Transaction()
{
  _abortNow = false;
  _commitDepCounter = 0;
  _state = 0;
}

Transaction::~Transaction()
{

}

bool abortNow() {
  return _abortNow;
}
int getCommitDepCounter() {
  return _commitDepCounter;
}
int getState() {
  return _state;
}
Timestamp getEnd() {
  return _end;
}
vector<int>* getCommitDepSet() {
  return _commitDepSet;
}

void setState(int s) {
  _state = s;
}
void setCommitDepCounter(int c) {
  _commitDepCounter = c;
}
void setCommitDepSet(vector<int> * c) {
  _commitDepSet = c;
}
void setAbortNow(bool b) {
  _abortNow = b;
}
